<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BookAppsActivity" >

    <TextView
        android:id="@+id/crime_list_item_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_book_button"
        android:textSize="20sp" />

    <Button
        android:id="@+id/book_app1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/crime_list_item_titleTextView"
        android:layout_below="@+id/crime_list_item_titleTextView"
        android:layout_marginTop="23dp"
        android:text="@string/book_app1"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/book_app2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/book_app1_button"
        android:layout_below="@+id/book_app1_button"
        android:text="@string/book_app2"
        android:textSize="15sp" />

    <Button
        android:id="@+id/book_app3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/book_app2_button"
        android:layout_below="@+id/book_app2_button"
        android:text="@string/book_app3"
        android:textSize="15sp" />

</RelativeLayout>