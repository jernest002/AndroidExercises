<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".BookAppsActivity" >

    <TextView
        android:id="@+id/crime_list_item_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_book_button"
        android:textSize="20sp" />

    <Button
        android:id="@+id/book_app1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/book_app1"
        android:layout_weight="1"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/book_app2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app2"
        android:layout_weight="1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/book_app3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app3"
        android:layout_weight="1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/book_app4_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app4"
        android:layout_weight="1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/book_app5_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app5"
        android:layout_weight="1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/book_app6_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app6"
        android:layout_weight="1"
        android:textSize="15sp" />
    <Button
        android:id="@+id/book_app7_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app7"
        android:layout_weight="1"
        android:textSize="15sp" />
    <Button
        android:id="@+id/book_app8_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_app8"
        android:layout_weight="1"
        android:textSize="15sp" />
    
</LinearLayout>